@model MindEase.Models.Appointment
@using System.Security.Claims
@{
    ViewData["Title"] = "Create Appointment";
    var userType = User.Claims.FirstOrDefault(c => c.Type == "UserType")?.Value;
    var isTherapist = userType == "Therapist";
}

<!-- CREATE HERO -->
<section class="page-hero">
    <div class="container">
        <span class="section-tag">New Appointment</span>
        <h1 class="section-title">Create Appointment</h1>
        <p class="section-subtitle">Schedule a new therapy session</p>
    </div>
</section>

<!-- CREATE FORM -->
<section class="form-section">
    <div class="container">
        <div class="form-card">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Appointment Title</label>
                    <input asp-for="Title" class="form-input" placeholder="e.g., Therapy Session, Consultation" />
                    <span asp-validation-for="Title" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AppointmentDate" class="form-label">Date & Time</label>
                    <input asp-for="AppointmentDate" type="datetime-local" class="form-input" />
                    <span asp-validation-for="AppointmentDate" class="field-validation-error"></span>
                </div>

                @* İstersen Status’u tamamen kaldır. Terapist için göstermek istersen: *@
                @if (isTherapist)
                {
                    <div class="form-group">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Status" class="field-validation-error"></span>
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Notes" class="form-label">Notes (Optional)</label>
                    <textarea asp-for="Notes" class="form-input form-textarea"
                        placeholder="Any additional notes..."></textarea>
                    <span asp-validation-for="Notes" class="field-validation-error"></span>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Create Appointment</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}