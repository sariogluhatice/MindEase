@model MindEase.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<!-- DELETE HERO -->
<section class="page-hero">
    <div class="container">
        <span class="section-tag">Delete</span>
        <h1 class="section-title">Delete Appointment</h1>
        <p class="section-subtitle">Are you sure you want to delete this appointment?</p>
    </div>
</section>

<!-- DELETE CONFIRMATION -->
<section class="form-section">
    <div class="container">
        <div class="delete-card">
            <div class="delete-warning">
                <div class="warning-icon">⚠️</div>
                <h3>This action cannot be undone</h3>
                <p>You are about to delete the following appointment:</p>
            </div>

            <div class="delete-details">
                <div class="detail-row">
                    <span class="detail-label">Title:</span>
                    <span class="detail-value">@Model.Title</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Date:</span>
                    <span class="detail-value">@Model.AppointmentDate.ToString("dd MMM yyyy, HH:mm")</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Status:</span>
                    <span class="detail-value">
                        <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span>
                    </span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="detail-row">
                        <span class="detail-label">Notes:</span>
                        <span class="detail-value">@Model.Notes</span>
                    </div>
                }
            </div>

            <form asp-action="Delete" method="post" class="delete-actions">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</section>

