@model IEnumerable<MindEase.Models.Appointment>
@{
    var isTherapist = (ViewBag.IsTherapist as bool?) ?? false;
    var now = ViewBag.Now is DateTime d ? d : DateTime.UtcNow;
}

<section class="page-hero">
    <div class="container">
        <span class="section-tag">My Schedule</span>
        <h1 class="section-title"> My Appointments</h1>
        <p class="section-subtitle">Manage your therapy sessions and appointments</p>
    </div>
</section>

<section class="appointments-section">
    <div class="container">
        <div class="appointments-card">
            <div class="appointments-header">
                <h2>Appointments</h2>
                <div class="appointments-actions">
                    <form asp-action="Index" method="get" class="search-form">
                        <input type="text" name="searchString" value="@ViewBag.SearchString"
                            placeholder="Search appointments..." class="search-input" />
                        <button type="submit" class="search-btn">Search</button>
                    </form>
                    <a asp-action="Create" class="btn-add">+ New Appointment</a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert-success" id="successAlert">
                    @TempData["Success"]
                </div>
            }

            @if (!Model.Any())
            {
                <div class="empty-state">
                    <p>No appointments found. Create your first appointment!</p>
                    <a asp-action="Create" class="btn btn-primary">Create Appointment</a>
                </div>
            }
            else
            {
                <div class="table-wrapper">
                    <table class="appointments-table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Date & Time</th>
                                <th>Status</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="appointment-title">@item.Title</span></td>
                                    <td>@item.AppointmentDate.ToString("dd MMM yyyy, HH:mm")</td>
                                    <td>
                                        <span class="status-badge status-@item.Status.ToLower()">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="notes-cell">
                                        @(item.Notes?.Length > 30 ? item.Notes.Substring(0, 30) + "..." : item.Notes)
                                    </td>
                                    <td class="actions-cell">
                                        @if (isTherapist)
                                        {
                                            <form asp-action="Approve" method="post" style="display:inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" style="border:none; background:none; color:green"
                                                    class="btn-icon" title="Approve">
                                                    <i class="fa fa-check" aria-hidden="true"></i>
                                                </button>
                                            </form>

                                            <form asp-action="Cancel" method="post" style="display:inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" style="border:none; background:none; color:red"
                                                    class="btn-icon" title="Cancel">
                                                    <i class="fa fa-times" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        var alert = document.getElementById('successAlert');
        if (alert) {
            setTimeout(function () {
                alert.style.transition = 'opacity 0.3s';
                alert.style.opacity = '0';
                setTimeout(function () { alert.style.display = 'none'; }, 500);
            }, 3000);
        }
    </script>
}