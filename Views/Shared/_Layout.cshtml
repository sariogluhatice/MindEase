<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MindEase</title>

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- HEADER -->
    <header class="header">
        <div class="container">
            <nav class="nav">
                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")" class="nav-logo">
                    <div class="nav-logo-icon">M</div>
                    <span>MindEase</span>
                </a>

                <!-- Navigation Menu -->
                <ul class="nav-menu">
                    <li><a href="@Url.Action("Index", "Home")"
                            class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">Home</a>
                    </li>
                    <li><a href="@Url.Action("About", "Home")"
                            class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")">About
                            Us</a></li>
                    <li><a href="@Url.Action("Services", "Home")"
                            class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Services" ? "active" : "")">Services</a>
                    </li>
                    <li><a href="@Url.Action("Contact", "Home")"
                            class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")">Contact
                            Us</a></li>
                    <li><a href="@Url.Action("Blog", "Home")"
                            class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Blog" ? "active" : "")">Blog</a>
                    </li>
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <li><a href="@Url.Action("Index", "Appointments")"
                                class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Appointments" ? "active" : "")">My
                                Appointments</a></li>
                    }
                </ul>

                <!-- Auth Buttons -->
                <div class="nav-buttons">
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <a href="@Url.Action("Logout", "Account")" class="nav-btn-logout">Logout</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="nav-btn-login">Login</a>
                        <a href="@Url.Action("Register", "Account")" class="nav-btn-register">Register</a>
                    }
                </div>
            </nav>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">
                    <div class="footer-logo-icon">M</div>
                    <span>MindEase</span>
                </div>

                <div class="footer-social">
                    <a href="#" title="Facebook">f</a>
                    <a href="#" title="Twitter">X</a>
                    <a href="#" title="LinkedIn">in</a>
                </div>
            </div>

            <div class="footer-bottom">
                <p>Betül Taşkıran Pınar İşler Hatice Sarıoğlu - SOFT3111 - Fall 2025 </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Header scroll effect
        window.addEventListener('scroll', function () {
            const header = document.querySelector('.header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>