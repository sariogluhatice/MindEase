@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MindEase</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Genel CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />

    <!-- Sayfaya özel CSS için -->
    @RenderSection("Styles", required: false)
</head>


<body>
    <!-- HEADER (LOGO + NAVBAR) -->
    <header>
        <div class="header header-container">
            <div class="topnav">
                <nav>
                    <ul>
                        <li><a class="logo" href="@Url.Action("Index", "Home")">M</a></li>

                        @* Bu linkleri sonra kendi action’larına göre düzenleyebilirsin *@
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="#">About us</a></li>
                        <li><a href="@Url.Action("Services", "Home")">Services</a></li>
                        <li><a href="#">Contact us</a></li>
                        <li><a href="#">Blog</a></li>

                        <li class="nav-buttons">
                            <a href="@Url.Action("Login", "Account")">Log In</a>
                            <a href="@Url.Action("Register", "Account")">Register</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- ANA İÇERİK -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="bottomnav">
            <nav>
                <ul>
                    <li><a href="#facebook">F</a></li>
                    <li><a href="#X">X</a></li>
                </ul>
            </nav>
        </div>
    </footer>

    @* JS dosyaları *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/home.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>